<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:padding="12dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/news_image_group"
        android:layout_width="152dp"
        android:layout_height="82dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageNewsContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/place_holder" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timeNewsContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_medium"
        android:textColor="@color/textSecondaryColor"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="02 Sep 2019" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleNewsContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/avenir_demi"
        android:lines="3"
        android:maxLines="3"
        android:textColor="@color/primary_text_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/news_image_group"
        app:layout_constraintTop_toBottomOf="@id/timeNewsContent"
        tools:text="We've Seen This Before,
and It Doesn't End Well" />


</androidx.constraintlayout.widget.ConstraintLayout>